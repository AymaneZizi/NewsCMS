@model  Tazeyab.Web.Models.WpWidget


<div class="panel">
    <div class="panel-heading" style="background-color:@Model.HeaderColor">
        <h3 class="h2" style="color:#fff">
            @if (!string.IsNullOrEmpty(Model.Url))
            {
                <a class="pull-right" style="background-image: url('http://www.google.com/s2/favicons?domain=@Model.Url');" href="http://@Model.Url"></a>
            }

            @Model.Title
        </h3>
    </div>
    <div class="panel-body" style="@(Model.Height>0?"height:"+Model.Height+"px;":"") overflow-y:auto; padding: 3px">
        @Html.Action(MVC.RemoteWebPart.ActionNames.Index, MVC.RemoteWebPart.Name, new { wpcode = Model.Code })
    </div>
</div>