@model Mn.Framework.Web.Model.PageGridModel
@{
    ViewBag.Title = "وب پارت";
    Layout = MVC.Dashboard.Shared.Views._Layout;
}

@(Html.Kendo().Grid<RemoteWebPart>().Name("gridRwp").Columns(column =>
{
    column.Bound(c => c.Id);
    column.Bound(c => c.WebPartTitle).Width(150);
    column.Bound(c => c.WebPartCode);
    column.Bound(c => c.WebPartDesc);
    column.Bound(c => c.Active);
    column.Bound(c => c.FailedRequestCount);  
    column.Bound(c => c.Id).Width(120).ClientTemplate(@Model.GridMenu.ToString()).Title("").Filterable(false);
}
).Pageable()
.Sortable()
.Filterable()
.Editable(e => e.Enabled(false))
.Events(evn => evn.DataBound("onGridDataBound"))
.ToolBar(toolbar => toolbar.Create())
.DataSource(datasource => datasource.Ajax().
            Read(action => action.Action(MVC.Dashboard.Rwp.ActionNames.Rwp_Read, MVC.Dashboard.Rwp.Name)).
            Create(action => action.Action(MVC.Dashboard.Rwp.ActionNames.Manage, MVC.Dashboard.Rwp.Name)).
            Update(action => action.Action(MVC.Dashboard.Rwp.ActionNames.Manage, MVC.Dashboard.Rwp.Name)).
    Model(model => model.Id(m => m.Id))))

